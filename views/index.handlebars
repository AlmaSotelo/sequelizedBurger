<!-- Here goes the majority of the handlebars code -->
<div class="container">
  <div class= "row">
    <div class="col-xl-12 text-center" id="top-bar">
      <h1>Super duper Delicious Burgers...DEVOURE IT!</h1>
    </div>
  </div> <!-- end of first row--> 
  <div id="imageContainer">
    <img src ="./assets/img/burger.jpg" width="150px" height="150px">
  </div>
  
  <div class="col-xl text-center" class="task">
    <div class="row">
      {{#each burger}}
      {{#unless this.devoured}}
      <div style="display:flex">
        <div class="col-xl text-center">
          <div class="burger">
            {{this.burger_name}}
          </div>
        </div>
        <div class="col-xl text-center">
          <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
            <input type="hidden" name="burger_id" type="text" value={{this.id}}>
            <br>
            <button type="submit" class="btn btn-default submit">DEVOUR IT!</button>
          </form>
        </div>
      </div>
      {{/unless}}
      {{/each}}
    </div>
    <div style="flex-wrap:wrap" class="container">
      <div style="display:flex" class="col-xm text-center" class="task">
        {{#each burger}}
          {{#if this.devoured}}
        <div style="display:flex" class="devouredContainers">
          <div class="devouredBurger">
            {{this.burger_name}}
          </div>
        </div>
        {{/if}}
        {{/each}}  
      </div>
    </div>
  </div>  
<div class="container">
  <div id="entering" class="row">
    <div class="col-xl-6 text-center enter_section">
      <form action="/burgers/add" method="POST">
        <input type="text" name="burger_name" class="form-control" value="" id="enter_text" placeholder="Enter in a burger you would like to eat">
        <button id="additBtn" type="submit" class="btn btn-primary" id="text-enter-button">ADD IT</button>   
      </form>
    </div>
  </div>
</div>






